{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "automerge": false,
  "automergeType": "pr",
  "labels": ["dependencies"],
  "baseBranchPatterns": ["develop"],
  "recreateWhen": "never",
  "patch": {
    "schedule": ["every weekday"]
  },
  "minor": {
    "schedule": ["on the 1st day of the month"]
  }
}
