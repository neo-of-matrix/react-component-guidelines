{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "automergeType": "pr",
      "schedule": ["every weekday"]
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "schedule": ["on the 1st day of the month"]
    }
  ],
  "labels": ["dependencies"],
  "bbUseDevelopmentBranch": true
}
